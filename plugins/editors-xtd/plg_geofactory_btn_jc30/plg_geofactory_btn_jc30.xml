<extension version="3.1" type="plugin" group="editors-xtd" method="upgrade" >
	<name>Geocode Factory 5 - Button - Joomla content</name>
	<version>5.15.0415</version>
	<author>Cédric Pelloquin</author>
	<authorEmail>info@myJoom.com</authorEmail>
	<authorUrl>http://www.myJoom.com</authorUrl>
	<copyright>Copyright © 2009-2014 - All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<creationDate>2014</creationDate>
	<description>Geocode Factory 5 - Editor button to geocode your Joomla articles</description>
		<filename>index.html</filename>
  	<scriptfile>plg_geofactory_btn_jc30.install.php</scriptfile>
	<files>
		<filename plugin="plg_geofactory_btn_jc30">plg_geofactory_btn_jc30.php</filename>
		<filename>index.html</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 	name="defLat" 
						type="text" 
						default="" 
						label="Default latitude" 
						description="default latitude if user does not allow to be located"/>
				<field 	name="defLng" 
						type="text" 
						default="" 
						label="Default longitude" 
						description="default longitude if user does not allow to be located"/>
			</fieldset>
		</fields>
	</config>
   <updateservers>
    	<server type="extension" priority="1" name="GeocodeFactoryButtonJc30">http://myjoom.com/myjoom-updater/geofactory-updater-jc_button_30.xml</server>
 	</updateservers>
</extension>
